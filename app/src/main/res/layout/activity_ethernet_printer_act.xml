<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <EditText
        android:id="@+id/ethernet_printer_ip_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/printer_ip"
        android:text="192.168.169." />

    <EditText
        android:id="@+id/ethernet_printer_port_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9100"
        app:layout_constraintTop_toBottomOf="@+id/ethernet_printer_ip_et" />

    <Button
        android:id="@+id/ethernet_printer_test_print_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testPrint"
        android:text="@string/test_print"
        app:layout_constraintTop_toBottomOf="@+id/ethernet_printer_port_et" />

</android.support.constraint.ConstraintLayout>